# diff2commit CLI Configuration

# Required: Your AI provider API key
D2C_API_KEY=your-api-key-here

# AI Provider: openai, anthropic, or gemini
D2C_PROVIDER=openai

# AI Model
D2C_MODEL=gpt-4

# Optional: Custom API endpoint
# D2C_API_ENDPOINT=https://api.openai.com/v1

# Generation Settings
D2C_MAX_TOKENS=200
D2C_TEMPERATURE=0.7
D2C_TIMEOUT=30
D2C_MAX_RETRIES=3

# Commit Message Settings
D2C_COMMIT_FORMAT=conventional
D2C_INCLUDE_EMOJI=false
D2C_MAX_SUBJECT_LENGTH=72

# Cost Tracking
D2C_TRACK_USAGE=true
# D2C_COST_LIMIT_MONTHLY=10.0

# Advanced
D2C_VERBOSE=false